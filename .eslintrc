{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "prettier",
        "@typescript-eslint"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-explicit-any": {
            "ignoreRestArgs": true
        }
    },
    "ignorePatterns": [
        "**/node_modules", "**/build"
    ]
}