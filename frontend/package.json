{
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "lint": "yarn prettier:test && yarn lint:app",
    "lint:app": "eslint \"{pages,components,types,utils}/**/*.ts*\" --ext .ts",
    "prettier:test": "prettier --check \"{pages,components,types,utils}/**/*.ts*\"",
    "prettier:fix": "prettier --write \"{pages,components,types,utils}/**/*.ts*\""
  },
  "dependencies": {
    "bootstrap": "5.0.2",
    "bootstrap-icons": "^1.5.0",
    "next": "latest",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "12.12.21",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "husky": "7.0.1",
    "sass": "1.36.0",
    "typescript": "4.0"
  },
  "license": "MIT",
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "proseWrap": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  }
}
